<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.in.apnisevatechinican.UserRegister"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/thirty"
                android:text="Technician Registration"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty_five">

            </TextView>
            <TextView
                android:id="@+id/text"
                android:layout_below="@id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/ten"
                android:text="Fill the details &amp; create your account "
                android:textColor="#5C5A5A"
                android:textSize="@dimen/twenty_size">

            </TextView>

            <LinearLayout
                android:id="@+id/data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_marginTop="@dimen/thirty"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edit_fullname"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginTop="@dimen/twenty"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/twenty"
                    android:ems="10"
                    android:hint="User Name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="#25297A"
                    android:textSize="@dimen/edittextsize"
                    android:paddingLeft="@dimen/ten"
                    android:textStyle="normal"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/edit_MobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_below="@id/edit_MobileNumber"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/twenty"
                    android:textSize="@dimen/edittextsize"
                    android:paddingLeft="@dimen/ten"
                    android:ems="10"
                    android:hint="Mobile No"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:textColor="#25297A"
                    android:textStyle="normal"
                    android:maxLength="10"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/edit_Email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/twenty"
                    android:textSize="@dimen/edittextsize"
                    android:paddingLeft="@dimen/ten"
                    android:ems="10"
                    android:hint="Email Id"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:textColor="#25297A"
                    android:textStyle="normal"
                    android:background="@drawable/box"/>

                <Spinner
                    android:id="@+id/WorkingCategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:paddingLeft="@dimen/two"
                    android:paddingRight="@dimen/two"
                    android:text="Please Select Your Area"
                    android:textColor="#25297A"
                    android:textSize="@dimen/fifteen"
                    android:background="@drawable/box"/>

                <Spinner
                    android:id="@+id/WorkingSubcategory"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:paddingLeft="@dimen/two"
                    android:paddingRight="@dimen/two"
                    android:text="Please Select Your Area"
                    android:textColor="#25297A"
                    android:background="@drawable/box"
                    android:textSize="@dimen/fifteen" />

                <Spinner
                    android:id="@+id/Workingcity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:gravity="center_vertical"
                    android:spinnerMode="dropdown"
                    android:paddingLeft="@dimen/two"
                    android:paddingRight="@dimen/two"
                    android:text="Please Select Your Area"
                    android:textColor="#25297A"
                    android:background="@drawable/box"
                    android:textSize="@dimen/fifteen" />


                <EditText
                    android:id="@+id/edit_Password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_below="@id/edit_MobileNumber"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/twenty"
                    android:textSize="@dimen/edittextsize"
                    android:drawableRight="@drawable/baseline_visibility_off"
                    android:paddingRight="@dimen/ten"
                    android:paddingLeft="@dimen/ten"
                    android:ems="10"
                    android:hint="Password"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="#25297A"
                    android:textStyle="normal"
                    android:background="@drawable/box"/>

                <EditText
                    android:id="@+id/edit_ConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/forty_five"
                    android:layout_below="@id/edit_MobileNumber"
                    android:layout_marginLeft="@dimen/twenty_five"
                    android:layout_marginRight="@dimen/twenty_five"
                    android:layout_marginBottom="@dimen/twenty"
                    android:textSize="@dimen/edittextsize"
                    android:paddingLeft="@dimen/ten"
                    android:ems="10"
                    android:hint="ConfirmPassword"
                    android:drawableRight="@drawable/baseline_visibility_off"
                    android:paddingRight="@dimen/ten"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:textColor="#25297A"
                    android:textStyle="normal"
                    android:background="@drawable/box"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="@dimen/two_hundred"
                android:layout_height="@dimen/forty_five"
                android:layout_below="@+id/data"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/twenty_five"
                android:layout_marginBottom="10dp"
                android:background="@drawable/livechart_bg"
                android:text="SIGN UP"
                android:textAllCaps="false"
                android:textColor="@color/white"></Button>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/condition"
                android:layout_below="@+id/btn_signup"
                android:layout_marginTop="@dimen/ten"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/login1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="By signing in you agree to our "
                    android:textStyle="bold"
                    android:textColor="#817F7F"
                    android:textSize="@dimen/textsize"
                    android:paddingLeft="18dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/text_TermsService"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service And Privacy Policy"
                    android:textStyle="bold"
                    android:textColor="#800080"
                    android:textSize="@dimen/textsize"
                    android:paddingLeft="18dp"
                    android:layout_below="@id/login1"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="#B203A9F4"
                    android:textSize="@dimen/edittextsize"
                    android:layout_centerHorizontal="true"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/condition"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/twenty"
                android:layout_marginTop="@dimen/thirty">

                <TextView
                    android:id="@+id/login2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account?"
                    android:textColor="#817F7F"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/text_SignIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/login2"
                    android:text=" Sign In"
                    android:textColor="#800080"
                    android:textSize="@dimen/textsize"
                    android:textStyle="bold"
                    />


            </RelativeLayout>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>