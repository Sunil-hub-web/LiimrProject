<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#800080">

    <ImageView
        android:id="@+id/menuimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_menu"
        android:layout_margin="10dp"
        android:onClick="Clickmenu">

    </ImageView>


    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:text="Home"
        android:layout_margin="9dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/menuimage"
        android:weightSum="2"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_name1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Booking Id :"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/nine"
            android:layout_marginLeft="@dimen/thirty"></TextView>

        <TextView
            android:id="@+id/bookingId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android:text="Home"
            android:layout_toRightOf="@id/text_name1"
            android:layout_margin="9dp"
            android:layout_marginLeft="@dimen/thirty"
            android:textStyle="bold"></TextView>

    </LinearLayout>

</RelativeLayout>