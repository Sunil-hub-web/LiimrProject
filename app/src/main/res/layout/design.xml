    <androidx.cardview.widget.CardView

        app:cardElevation="@dimen/one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/text1"
                android:layout_marginTop="@dimen/thirteen"
                android:background="#636363" />

        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="#1A1A1B"
            android:textSize="@dimen/twenty_size"
            android:text="Final Work Details"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"></TextView>

            <EditText
                android:id="@+id/edit_CompleteAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hundred"
                android:layout_margin="@dimen/fifteen"
                android:background="@drawable/workingdetails_bg"
                android:gravity="start"
                android:hint="Enter Complete Address"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/ten"
                android:textColor="#25297A"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="@dimen/ten">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:text="Final Bill amountb (Rs)"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ten"></TextView>

                <EditText
                    android:id="@+id/edit_Money"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/forty"
                    android:background="@drawable/workingdetails_bg"
                    android:text="1500"
                    android:paddingLeft="@dimen/ten"
                    android:textColor="#0E0E0E"
                    android:textSize="@dimen/edittextsize" />
                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="@dimen/forty"
                    android:layout_below="@+id/data"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/pinverifay_bg"
                    android:text="Apply"
                    android:layout_marginLeft="@dimen/ten"
                    android:textSize="@dimen/edittextsize"
                    android:textAllCaps="false"
                    android:textColor="@color/white"></Button>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="@dimen/fifteen">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:text="Final Bill amountb (Rs)"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ten"></TextView>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:text="Rs"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ten"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:text="150"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/ten"></TextView>

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>



</RelativeLayout>