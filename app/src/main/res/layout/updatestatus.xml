<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/five">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/updatestatues_bg">

                    <TextView
                        android:id="@+id/bookingId"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittextsize"
                        android:layout_weight="1"
                        android:text="1  Order Confirmation"
                        android:textColor="#1436F3"
                        android:textSize="@dimen/textsize"></TextView>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/forty"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_toRightOf="@id/statues"
                        android:layout_weight="1"
                        android:background="@drawable/updateconfrom_bg">

                        <TextView
                            android:id="@+id/paid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/five"
                            android:gravity="center"
                            android:text="Confirmed"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/five">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/updatestatues_bg">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/edittextsize"
                        android:layout_weight="1"
                        android:text="2  Technician Allocated"
                        android:textColor="#1436F3"
                        android:textSize="@dimen/textsize"></TextView>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/forty"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_toRightOf="@id/statues"
                        android:layout_weight="1"
                        android:background="@drawable/updateconfrom_bg">

                        <TextView
                            android:id="@+id/text_TechicianName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/five"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginTop="@dimen/five"
                            android:layout_marginEnd="@dimen/five"
                            android:layout_marginRight="@dimen/five"
                            android:layout_marginBottom="@dimen/five"
                            android:gravity="center"
                            android:text="Techician Name"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_AllocatedTechician"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/five">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/updatestatues_bg">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_weight="1"
                        android:text="3  Allocated Technician"
                        android:textColor="#1436F3"
                        android:textSize="@dimen/textsize"></TextView>

                    <RelativeLayout
                        android:id="@+id/rel_Pinverified"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/ten"
                        android:layout_toRightOf="@id/statues"
                        android:layout_weight="1"
                        android:background="@drawable/updateconfrom_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/five"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginTop="@dimen/five"
                            android:layout_marginEnd="@dimen/five"
                            android:layout_marginRight="@dimen/five"
                            android:layout_marginBottom="@dimen/five"
                            android:gravity="center"
                            android:text="Pin verified &amp; Work in progress"
                            android:textColor="@color/white"
                            android:textSize="@dimen/textsize"
                            android:textStyle="bold">

                        </TextView>
                    </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/pinVerifay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/one"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_weight="1"
                        android:text="3  Allocated Technician / Pin Verification"
                        android:textColor="#27A0D6"
                        android:textSize="@dimen/textsize"></TextView>

                    <View
                        android:id="@+id/view"
                        android:layout_width="@dimen/three_hundred"
                        android:layout_height="1dp"
                        android:layout_below="@+id/text1"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="@dimen/thirteen"
                        android:background="#636363" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_weight="1"
                        android:text="Technician Allocated"
                        android:textColor="#505151"
                        android:textSize="@dimen/edittextsize"></TextView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred_fifty"
                        android:layout_margin="@dimen/ten"
                        app:cardCornerRadius="@dimen/ten"
                        app:cardElevation="@dimen/three">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/profile_image"
                                android:layout_width="@dimen/eighty"
                                android:layout_height="@dimen/eighty"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/ten"
                                android:src="@drawable/no_avatar"
                                app:civ_border_color="#FF000000"
                                app:civ_border_width="2dp" />


                            <RelativeLayout
                                android:id="@+id/details"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/twenty"
                                android:layout_toRightOf="@+id/profile_image"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/text_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_weight="1"
                                    android:text="Navin"
                                    android:textColor="#505151"
                                    android:textSize="@dimen/edittextsize"></TextView>

                                <TextView
                                    android:id="@+id/text_Contact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_name"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:text="contact :"
                                    android:textColor="#505151"
                                    android:textSize="@dimen/edittextsize"></TextView>

                                <TextView
                                    android:id="@+id/text_contact"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/text_name"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:layout_toRightOf="@+id/text_Contact"
                                    android:hint="7894561230"
                                    android:textColor="#505151"
                                    android:textSize="@dimen/edittextsize"></TextView>


                            </RelativeLayout>

                            <RatingBar
                                android:id="@+id/simpleRatingBar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/details"
                                android:layout_toRightOf="@id/profile_image"
                                android:numStars="5"
                                android:rating="5"
                                android:scaleX="0.5"
                                android:scaleY="0.5"
                                android:theme="@style/RatingBar" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/ten"
                        android:weightSum="2">

                        <EditText
                            android:id="@+id/edit_VerifythePin"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/fifty"
                            android:layout_marginLeft="@dimen/twenty_five"
                            android:layout_weight="1.2"
                            android:background="@drawable/box"
                            android:hint="Enter / Verify the Pin"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:paddingLeft="@dimen/ten"
                            android:textColor="#25297A"
                            android:textSize="@dimen/textsize" />

                        <Button
                            android:id="@+id/btn_PinVerifyApply"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/fifty"
                            android:layout_below="@+id/data"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight="0.5"
                            android:background="@drawable/pinverifay_bg"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:layout_marginLeft="@dimen/twenty"
                            android:textSize="@dimen/edittextsize"></Button>

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_WorkInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/five">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/updatestatues_bg">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_weight="1"
                        android:text="4  Work Info / Bill Info"
                        android:textColor="#1436F3"
                        android:textSize="@dimen/textsize"></TextView>

                           <RelativeLayout
                               android:id="@+id/rel_WorkCompleted"
                               android:layout_width="0dp"
                               android:layout_weight="1"
                               android:layout_height="wrap_content"
                               android:layout_toRightOf="@id/statues"
                               android:background="@drawable/updateconfrom_bg"
                               android:layout_gravity="center"
                               android:layout_marginRight="@dimen/ten">

                               <TextView
                                   android:id="@+id/ShowPrice"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:layout_centerVertical="true"
                                   android:layout_margin="@dimen/five"
                                   android:text="Work Completed "
                                   android:textColor="@color/white"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/textsize">

                               </TextView>

                               <!--<TextView
                                   android:id="@+id/ShowPrice"
                                   android:layout_width="wrap_content"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:layout_marginLeft="@dimen/five"
                                   android:layout_marginBottom="@dimen/five"
                                   android:layout_toRightOf="@id/text1"
                                   android:text="&amp; Rs 1500 is due"
                                   android:textColor="@color/white"
                                   android:textStyle="bold"
                                   android:textSize="@dimen/textsize">

                               </TextView>-->

                           </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/finalWorkDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/one"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/ten"
                    android:layout_marginBottom="@dimen/ten"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/ten"
                        android:layout_weight="1"
                        android:text="Final Work Details"
                        android:textColor="#1A1A1B"
                        android:textSize="@dimen/twenty_size"></TextView>

                    <EditText
                        android:id="@+id/edit_CompleteAddress"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/hundred"
                        android:layout_margin="@dimen/fifteen"
                        android:background="@drawable/workingdetails_bg"
                        android:gravity="start"
                        android:paddingLeft="20dp"
                        android:paddingTop="@dimen/ten"
                        android:textColor="#25297A"
                        android:textSize="18dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="1.3"
                            android:text="Final Bill amount be (Rs)"
                            android:textColor="#000000"
                            android:textSize="@dimen/textsize"></TextView>

                        <EditText
                            android:id="@+id/filal_Money"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/forty"
                            android:layout_weight="1"
                            android:background="@drawable/workingdetails_bg"
                            android:paddingLeft="@dimen/ten"
                            android:textColor="#0E0E0E"
                            android:textSize="@dimen/edittextsize" />

                        <Button
                            android:id="@+id/btn_CashPaidAopply"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/forty"
                            android:layout_below="@+id/data"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="0.6"
                            android:background="@drawable/pinverifay_bg"
                            android:text="Apply"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="@dimen/edittextsize"></Button>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/fifteen"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="1.5"
                            android:text="Booking Amount Due"
                            android:textColor="#000000"
                            android:textSize="@dimen/textsize"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="0.2"
                            android:text="Rs"
                            android:textColor="#000000"
                            android:textSize="@dimen/edittextsize"></TextView>

                        <TextView
                            android:id="@+id/booking_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_weight="0.8"
                            android:text="150"
                            android:textColor="#000000"
                            android:textSize="@dimen/edittextsize"></TextView>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_Payment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/eighty"
                android:layout_margin="@dimen/ten"
                app:cardElevation="@dimen/five">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/updatestatues_bg">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_weight="0.7"
                        android:text="5  Payment"
                        android:textColor="#1436F3"
                        android:textSize="@dimen/textsize"></TextView>

                       <RelativeLayout
                           android:id="@+id/rel_PaymentTobe"
                           android:layout_width="0dp"
                           android:layout_weight="1.5"
                           android:layout_height="wrap_content"
                           android:layout_toRightOf="@id/statues"
                           android:background="@drawable/payment_bg"
                           android:layout_gravity="center"
                           android:layout_marginRight="@dimen/ten">

                           <TextView
                               android:id="@+id/text"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:layout_marginTop="@dimen/five"
                               android:text="Payment To be done Rs"
                               android:layout_centerHorizontal="true"
                               android:textColor="#818080"
                               android:textStyle="bold"
                               android:textSize="@dimen/textsize">

                           </TextView>

                           <TextView
                               android:id="@+id/priceAmount"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_below="@+id/text"
                               android:layout_centerHorizontal="true"
                               android:layout_marginStart="@dimen/three"
                               android:layout_marginTop="@dimen/three"
                               android:layout_marginEnd="@dimen/three"
                               android:layout_marginBottom="@dimen/three"
                               android:text="1500"
                               android:textColor="#000000"
                               android:textSize="@dimen/textsize"
                               android:textStyle="bold">

                           </TextView>
                       </RelativeLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:id="@+id/lin_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/fifteen">

                <RadioButton
                    android:id="@+id/radio_RecievedCash"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Recieved Cash"
                    android:textSize="@dimen/twenty_size"></RadioButton>

                <Button
                    android:id="@+id/btn_CashApply"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="@dimen/forty"
                    android:layout_below="@+id/data"
                    android:background="@drawable/pinverifay_bg"
                    android:text="Apply"
                    android:layout_marginLeft="@dimen/twenty"
                    android:textSize="@dimen/edittextsize"
                    android:textAllCaps="false"
                    android:textColor="@color/white"></Button>

            </LinearLayout>

            <!--<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginLeft="@dimen/ten"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/twenty"
                android:text="if customer pays online from his/here this status will updated automatically"
                android:textColor="#070707"
                android:textSize="@dimen/textsize"></TextView>-->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>